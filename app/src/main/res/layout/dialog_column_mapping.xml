<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_essid"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerEssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_mac"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerMac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_wifi_pass"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerWifiPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_wps_pin"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerWpsPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_latitude"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_longitude"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonShowAdditionalFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_additional_fields"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/layoutAdditionalFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_admin_panel"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerAdminPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_security_type"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerSecurityType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_timestamp"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>