<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.databasefinder.DatabaseFinderFragment">

    <com.lsd.wififrankenstein.util.AnimatedLoadingBar
        android:id="@+id/progressBarDatabaseCheck"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="top"
        android:visibility="gone"
        android:elevation="8dp" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?attr/colorSurface"
                app:layout_collapseMode="parallax">

                <!-- Mode Toggle Group -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/modeToggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSimpleMode"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/simple_mode" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAdvancedMode"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/advanced_mode" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- Search container that holds both modes -->
                <FrameLayout
                    android:id="@+id/searchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <!-- Simple search container -->
                    <LinearLayout
                        android:id="@+id/simpleSearchContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutSearch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/search" />

                    </LinearLayout>

                    <!-- Advanced search container -->
                    <LinearLayout
                        android:id="@+id/advancedSearchContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- BSSID Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutBssid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/bssid_field">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextBssid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonBssidWildcard"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_wildcard"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- ESSID Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutEssid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/essid_field">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextEssid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonEssidAnyChar"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_char"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonEssidAnyString"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_string"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Password Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/password_field">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonPasswordAnyChar"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_char"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonPasswordAnyString"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_string"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- WPS PIN Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutWpsPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/wps_pin_field">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextWpsPin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonWpsPinAnyChar"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_char"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonWpsPinAnyString"
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:minWidth="0dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/insert_any_string"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Case sensitive checkbox and search button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkBoxCaseSensitive"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/case_sensitive" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonAdvancedSearch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <!-- Control buttons row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSources"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/sources" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonFilters"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/filters" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonDbSettings"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/db_settings"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_settings"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp" />

                </LinearLayout>

                <!-- Whole word checkbox (only for simple mode) -->
                <LinearLayout
                    android:id="@+id/checkboxContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkBoxWholeWord"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/search_whole_words" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Results list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_search_result" />

    <!-- Scroll to top FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_expand_less"
        android:visibility="gone"
        app:fabSize="mini" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>