<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        tools:context=".ui.settings.SettingsFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewDbSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/database_settings"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutDbSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/configure_database_description"
                        android:textAppearance="?attr/textAppearanceBody2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonDbSettings"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/configure_databases"
                        app:icon="@drawable/ic_database" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonClearCachedDatabases"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/clear_cached_databases"
                        app:icon="@drawable/ic_delete" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRequestStorageAccess"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/request_storage_access"
                        app:icon="@drawable/ic_folder_open" />

                    <TextView
                        android:id="@+id/textViewWarningStorageAccessInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/warning_storage_access_info"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textViewStorageAccessInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/storage_access_info"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:visibility="gone" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandDbSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_more"
                app:iconGravity="textStart"
                android:padding="8dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewAppSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewDbSettings"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_settings"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutAppSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchFullCleanup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/full_cleanup_on_network_update" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMergeResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/merge_online_offline_results" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchScanOnStartup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/scan_networks_on_startup" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCheckUpdates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/check_updates_on_app_open" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchExpandedSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/always_expand_settings" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowWipFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/show_wip_features" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?android:attr/listDivider" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchEnableRoot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/enable_root_functions" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandAppSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_less"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewThemeSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewAppSettings"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_theme"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutThemeSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/choose_app_theme"
                        android:textAppearance="?attr/textAppearanceBody2" />

                    <RadioGroup
                        android:id="@+id/radioGroupTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonSystemTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/system_default" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonLightTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/light_theme" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonDarkTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/dark_theme" />

                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/color_theme"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <RadioGroup
                        android:id="@+id/radioGroupColorTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonPurpleTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/purple_theme" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonGreenTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/green_theme" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioButtonBlueTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/blue_theme" />

                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_icon"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/choose_app_icon"
                        android:textAppearance="?attr/textAppearanceBody2" />

                    <Spinner
                        android:id="@+id/spinnerAppIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@drawable/spinner_dropdown_background" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandThemeSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_more"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewAPI3WiFiSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewThemeSettings"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/api_3wifi_settings"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutAPI3WiFiSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputMaxPoints"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/max_points_per_request">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextMaxPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputRequestDelay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/request_delay_ms">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextRequestDelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConnectTimeout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/connect_timeout_ms">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextConnectTimeout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputReadTimeout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/read_timeout_ms">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextReadTimeout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCacheResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/cache_results" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchTryAlternativeUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/try_alternative_url" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchUsePostMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/use_post_method" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIgnoreSSLCertificate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/ignore_ssl_certificate" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchIncludeAppIdentifier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/include_app_identifier"
                        android:checked="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:textSize="12sp"
                        android:text="@string/app_identifier_description"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSaveAPISettings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/save_api_settings" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonResetAPISettings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/reset_to_default" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?android:attr/listDivider" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonClearAPICache"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="@string/clear_api_cache"
                        app:icon="@drawable/ic_delete" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandAPI3WiFiSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_more"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewWifiMapSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewAPI3WiFiSettings"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_map_settings"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutWifiMapSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/cluster_aggressiveness"
                        android:textAppearance="?attr/textAppearanceBody1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minimum"
                            android:textAppearance="?attr/textAppearanceCaption" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderClusterAggressiveness"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0.15"
                            android:valueTo="3.0"
                            android:value="0.4"
                            android:stepSize="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aggressive"
                            android:textAppearance="?attr/textAppearanceCaption" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cluster_aggressiveness_info"
                        android:textAppearance="?attr/textAppearanceCaption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/max_cluster_size"
                        android:textAppearance="?attr/textAppearanceBody1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textViewMaxClusterSizeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5000"
                            android:textAppearance="?attr/textAppearanceBody2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/points"
                            android:textAppearance="?attr/textAppearanceCaption" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderMaxClusterSize"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="1000"
                            android:valueTo="30000"
                            android:value="5000"
                            android:stepSize="1000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_cluster_size_info"
                        android:textAppearance="?attr/textAppearanceCaption" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="?android:attr/listDivider" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchForcePointSeparation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/force_point_separation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/force_point_separation_desc"
                        android:textAppearance="?attr/textAppearanceCaption" />

                    <!-- Слайдер минимального зума для отображения маркеров -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/marker_visibility_zoom"
                        android:textAppearance="?attr/textAppearanceBody1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_at_any_zoom"
                            android:textAppearance="?attr/textAppearanceCaption" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderMarkerVisibilityZoom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="18"
                            android:value="13"
                            android:stepSize="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/only_when_close"
                            android:textAppearance="?attr/textAppearanceCaption" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewMarkerVisibilityZoomValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:text="@string/zoom_level_value" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/marker_visibility_zoom_info"
                        android:textAppearance="?attr/textAppearanceCaption" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandWifiMapSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_more"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewDeveloperSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewWifiMapSettings"
            app:strokeColor="?attr/colorControlNormal"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/developer_settings"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <LinearLayout
                    android:id="@+id/layoutDeveloperSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDummyNetworkMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/dummy_network_mode" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDebugLogging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_debug_logging" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExpandDeveloperSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_expand_more"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
