<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conversion_type"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/radio_group_conversion_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_routerscan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/file_type_routerscan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/routerscan_desc"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_3wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/file_type_3wifi_sql" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi3_desc"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_p3wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/file_type_p3wifi_sql" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p3wifi_desc"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- RouterScan files section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_routerscan_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_txt_files"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_txt_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_txt_files"
                    app:icon="@drawable/ic_file"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_txt_files_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_txt_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 3WiFi files section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_3wifi_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/file_type_3wifi_sql"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_base_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_base_file"
                    app:icon="@drawable/ic_file"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_base_file_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_geo_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_geo_file"
                    app:icon="@drawable/ic_file"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_geo_file_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- p3WiFi files section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_p3wifi_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/file_type_p3wifi_sql"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_input_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_input_file"
                    app:icon="@drawable/ic_file"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_input_file_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conversion_mode"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/radio_group_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_performance_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/performance_mode"
                        android:checked="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/performance_mode_desc"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_economy_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/economy_mode" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/economy_mode_desc"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indexing_options"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/radio_group_indexing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_full_indexing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/full_indexing" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_basic_indexing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_indexing"
                        android:checked="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_no_indexing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_indexing" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="32dp" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/output_location"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_select_output_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_output_location"
                    app:icon="@drawable/ic_file"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_output_location_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:text="@string/output_location_internal" />

                <TextView
                    android:id="@+id/text_output_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:layout_marginTop="4dp"
                    android:alpha="0.7"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_progress_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <com.lsd.wififrankenstein.util.AnimatedLoadingBar
                android:id="@+id/animated_loading_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_progress_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceCaption"
                android:gravity="center"
                android:alpha="0.7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/conversion_progress_note"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:alpha="0.8" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_conversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_conversion"
            app:icon="@drawable/ic_transform"
            android:enabled="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>