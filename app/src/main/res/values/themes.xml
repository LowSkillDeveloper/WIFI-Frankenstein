<resources>
    <!-- Base application theme -->
    <style name="Theme.WIFIFrankenstein.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Purple theme -->
    <style name="Theme.WIFIFrankenstein.Purple" parent="Theme.WIFIFrankenstein.Base">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/card_background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <!-- Purple theme (Night) -->
    <style name="Theme.WIFIFrankenstein.Purple.Night">
        <item name="colorPrimary">@color/purple_200_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!-- Green theme -->
    <style name="Theme.WIFIFrankenstein.Green" parent="Theme.WIFIFrankenstein.Base">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/card_background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <!-- Green theme (Night) -->
    <style name="Theme.WIFIFrankenstein.Green.Night">
        <item name="colorPrimary">@color/green_200_dark</item>
        <item name="colorPrimaryVariant">@color/green_700_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!-- Blue theme -->
    <style name="Theme.WIFIFrankenstein.Blue" parent="Theme.WIFIFrankenstein.Base">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/card_background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <!-- Blue theme (Night) -->
    <style name="Theme.WIFIFrankenstein.Blue.Night">
        <item name="colorPrimary">@color/blue_200_dark</item>
        <item name="colorPrimaryVariant">@color/blue_700_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!-- AppBar и PopupOverlay стили -->
    <style name="Theme.WIFIFrankenstein.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WIFIFrankenstein.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>